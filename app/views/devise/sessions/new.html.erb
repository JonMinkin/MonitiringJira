<div class = "container">
  <div class = "panel_devise panel-default width_panel">
    <div class = "panel-heading"><%= t("devise.authorization") %></div>
      <div class = "panel-body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {:"data-parsley-validate" => true}) do |f| %>
          <div class = "row">
            <div class = "col-lg-12">
              <div class = "lable_email left_top7">
                 <%= label_tag :email, t("devise.email"), :class=> "control-label" %>
              </div>
              <div class = "email">
              <%= f.email_field :email, autofocus: true, placeholder: "Логин", input_html: { "data-parsley-error-message" => "Пожалуста заполните поле", "data-parsley-trigger" => "focusin focusout change"}, :class => "form-control" %>
              </div>
            </div>
          </div>
          <div class = "row" >
            <div class = "col-lg-12" >
              <div class = "label_password_and_button">
                 <%= label_tag :password, t("devise.password"), :class=> "control-label" %>
              </div>
              <div class = "password left_top5">
              <%= f.password_field :password,  placeholder: t("devise.password"), :class => "form-control" %>
              </div>
            </div>
          </div>
          <div class = "row" >
            <div class = "col-lg-12" >
              <button class = "btn btn-primary label_password_confirmation_and_button">
                <i class = "glyphicon glyphicon-log-out"></i> <%= t("devise.sign_in") %>
              </button>
              <div class = "links left_top7">
                 <%= render :partial => "devise/shared/links" %>
              </div>
            </div>
          </div>
    <% end %>
      </div>
    </div>
  </div>
</div> 

