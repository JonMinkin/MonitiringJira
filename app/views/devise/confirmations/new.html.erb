<div class = "container">
  <% devise_error_messages!.present? ? flash.now[:error] =  devise_error_messages! : ""%>
  <div class = "panel_devise panel-default width_panel_confirmations">
    <div class = "panel-heading"><%= t("devise.Resend_confirmation_instructions") %></div>
      <div class = "panel-body">
        <%=  form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|%>
          <div class = "row">
            <div class = "col-lg-12">
              <div class = "email_confirmation left_top7">
                 <%= label_tag :email, t("devise.email"), :class=> "control-label" %>
              </div>
              <div class = "email">
               <%= f.email_field :email, autofocus: true, placeholder: "email", :class => "form-control" %>
              </div>
            </div>
          </div>
          <div class = "row" >
            <div class = "col-lg-12" >
              <button class = "btn btn-primary label_password_confirmation_and_button">
                <i class="glyphicon glyphicon-envelope"></i> <%= t("devise.send") %>
              </button>
              <div class = "links left_top7">
                 <%= render :partial => "devise/shared/links" %>
              </div>
            </div>
          </div>
    <% end %>
      </div>
    </div>
  </div>
</div> 
