<%- if controller_name != 'sessions' %>
  <% controller_name != 'sessions' ?  border_riht = "border_riht": border_riht = "" %>
  <div class="border <%= border_riht %>"><%= link_to "Войти", new_session_path(resource_name) %></div>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <% controller_name == 'sessions' ?  border_riht = "border_riht": border_riht = "" %>
  <div class="border <%= border_riht %>"><%= link_to "Регистрация", new_registration_path(resource_name) %></div>
   <%if controller_name != 'sessions'%>
     <br />
   <% end -%>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Забыли пароль?", new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t("devise.Didnt_receive_confirmation_instructions"), new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>
<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>