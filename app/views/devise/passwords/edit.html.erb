<div class = "container">
  <% devise_error_messages!.present? ? flash.now[:error] =  devise_error_messages! : "" %>
  <div class = "panel_devise panel-default width_panel_passwords_edit">
    <div class = "panel-heading"><%= t("devise.change_your_password") %></div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>  
          <%= f.hidden_field :reset_password_token %>
          <div class = "row">
            <div class = "col-lg-12">
              <div class = "lable_password_edit left_top5">
                 <%= label_tag :password, t("devise.new_password"), :class=> "control-label" %>
              </div>
              <div class = "email">
               <%= f.password_field :password, autofocus: true, placeholder: '', autocomplete: "off", :class => "form-control" %>
              </div>
            </div>
          </div>
          <div class = "row">
            <div class="col-lg-12">
              <div class = "lable_pass_edit">
                 <%= label_tag :password_confirmation, t("devise.password_confirmation"), :class=> "control-label" %>
              </div>
              <div class = "email left_top5">
               <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
              </div>
            </div>
          </div>
          <div class = "row" >
            <div class = "col-lg-12" >
              <button class = "btn btn-primary label_password_confirmation_and_button">
                <%= t("devise.change_password") %>
              </button>
              <div class = "links left_top7">
                 <%= render :partial => "devise/shared/links" %>
              </div>
            </div>
          </div>
    <% end %>
      </div>
    </div>
  </div>
</div> 
