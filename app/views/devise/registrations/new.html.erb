<div class="container">
  <% devise_error_messages!.present? ? flash.now[:error] =  devise_error_messages! : "" %>
  <div class="panel_devise panel-default width_panel_reg" >
    <div class="panel-heading"><%= t("devise.check_in") %></div>
      <div class="panel-body">
       <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="row">
            <div class="col-lg-12">
              <div class = "label_email_reg left_top7">
                 <%= label_tag :email, t("devise.email"), :class=> "control-label" %>
              </div>
              <div  class ="email_reg_and_password_confirmation_edit">
              <%= f.email_field :email, autofocus: true, placeholder: t("devise.login"), :class => "form-control" %>
              </div>
            </div>
          </div>
          <div class="row" >
            <div class="col-lg-12" >
              <div class = "label_password_reg">
                 <%= label_tag :password, t("devise.password"), :class=> "control-label" %>
              </div>
              <div class = "password_reg">
              <%= f.password_field :password, autocomplete: "off", placeholder: @str, :class => "form-control" %>
              </div>
            </div>
          </div>
          <div class="row" >
            <div class="col-lg-12" >
              <div class = "label_password_confirmation_and_button">
                 <%= label_tag :password_confirmation, t("devise.password_confirmation"), :class=> "control-label" %>
              </div>
              <div class = "password_reg">
               <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
              </div>
            </div>
          </div>
          <div class="row" >
            <div class="col-lg-12" >
              <button class="btn btn-primary label_password_and_button pading_reg">
                <i class="glyphicon glyphicon-pencil"></i> <%= t("devise.sign_up") %>
              </button>
              <div class = "links left_top7">
                 <%= render :partial => "devise/shared/links" %>
              </div>
            </div>
          </div>
    <% end %>
      </div>
    </div>
  </div>
</div> 