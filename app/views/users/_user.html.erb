<tr>
  <td><%= link_to user.email, user_path(user.id) %></td>
  <td>
    <% user.roles.each do |role| %>
      <%= link_to role.name, role_path(role.id) %><br/> 
    <% end %>
  </td>
  <td>
    <%= button_to(user_path(user.id), method: :delete, data: {confirm: "Точно удалить?"}, :class => "btn btn-danger btn_del_role") do %>
      <i class = "glyphicon glyphicon-trash"></i> <%= t("del") %>
    <% end %>
  </td>
</tr>